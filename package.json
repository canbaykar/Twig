{
	"name": "bo",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:open": "vite dev --open",
		"build": "vite build",
		"start": "node build",
		"start:open": "concurrently \"node build\" \"open-cli http://localhost:3000\"",
		"preview": "vite preview",
		"licenses": "npx generate-license-file --input package.json --output LICENSE-3RD-PARTY.txt --overwrite",
		"postinstall": "npm run licenses",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . --config config/.prettierc && eslint . --config config/eslint.config.js",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test --config=config/playwright.config.ts",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.0",
		"@eslint/compat": "^2.0.1",
		"@iconify/json": "^2.2.428",
		"@iconify/svelte": "^5.2.1",
		"@internationalized/date": "^3.10.1",
		"@playwright/test": "^1.57.0",
		"@storybook/addon-a11y": "^10.2.0",
		"@storybook/addon-docs": "^10.2.0",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-vitest": "^10.2.0",
		"@storybook/sveltekit": "^10.2.0",
		"@sveltejs/adapter-node": "^5.5.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/postcss": "^4.1.18",
		"@vitejs/plugin-basic-ssl": "^2.1.3",
		"@vitest/browser-playwright": "^4.0.15",
		"@vitest/coverage-v8": "^4.0.15",
		"bits-ui": "^2.15.4",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^10.2.0",
		"eslint-plugin-svelte": "^3.14.0",
		"generate-license-file": "^4.1.1",
		"globals": "^17.0.0",
		"jsdom": "^27.4.0",
		"mode-watcher": "^1.1.0",
		"open-cli": "^8.0.0",
		"peggy": "^4.2.0",
		"playwright": "^1.58.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"storybook": "^10.2.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0",
		"unplugin-icons": "^23.0.1",
		"vite": "^7.2.6",
		"vite-plugin-peggy-loader": "^2.0.1",
		"vitest": "^4.0.15"
	},
	"dependencies": {
